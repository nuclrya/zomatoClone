<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/restaurants.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

        <main>
            <% if (prods.length > 0) { %>
                <div class="res_list">
                    <h1>Restaurants Near</h1>
                    <div class="container">
                        <div class="cardList">
                            <% for (let product of prods) { %>
                            <div class="card">
                                <div class="image" style="background-image: url('<%= product.imageUrl %>')"></div>
                                <div class="content">
                                    <a id="name" href="/"><%= product.name %></a>
                                    <ul>
                                    <li> <p><%= product.cuisine %></p></li> 
                                    <li><p>Costs â‚¹150 for two</p></li>
                                    <li><p>Up to 25min </p></li>
                                    <li> <p>Accepts cash & online payments</p></li>
                                    </ul>
                                </div>
                                <p id="rating"> <i class="fa fa-star"></i> 4.2</p>
                                <a id ="order_button" href="/restaurants/<%= product._id %>">Order Now</a>
                            </div>
                            <% } %>
                        </div>
                    </div>    
                </div>
                <% } else { %>
                    <h1>No Products Found!</h1>
                    <% } %>
        </main>
        

        <%- include('../includes/end.ejs') %>